<%=titulo_pagina(link_icone("Pessoas","users"),"Listagem de pessoas")%>
<table class='table'>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Email</th>
      <th>Matricula</th>
      <th>Cargo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @administracao_pessoas.each do |administracao_pessoa| %>
      <tr>
        <td><%= administracao_pessoa.nome %></td>
        <td><%= administracao_pessoa.cpf %></td>
        <td><%= administracao_pessoa.email %></td>
        <td><%= administracao_pessoa.matricula %></td>
        <td><%= administracao_pessoa.cargo %></td>
        <td><%= link_to link_icone('detalhes'), administracao_pessoa,:class=>"btn btn-success btn-sm" %></td>
        <td><%= link_to link_icone('editar'), edit_administracao_pessoa_path(administracao_pessoa),class: "btn btn-warning btn-sm",data: { no_turbolink: true }  %></td>
        <td><%= link_to link_icone('apagar'), administracao_pessoa, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' },:class=>"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>



<%= link_to link_icone('Cadastrar Pessoas','plus'), new_administracao_pessoa_path, :class=>"btn btn-large btn-success",data: { no_turbolink: true }  %>
