<%=tabela_sitron("AdministracaoConfiguracao","Listagem de AdministracaoConfiguracao",@administracao_configuracoes) do %>

<table class='table'>
  <thead>
    <tr>
      <th>Index</th>
      <th>Salvar configuracao</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @administracao_configuracoes.each do |administracao_configuracao| %>
      <tr>
        <td><%= administracao_configuracao.index %></td>
        <td><%= administracao_configuracao.salvar_configuracao %></td>
        <td><%= link_to link_icone('detalhes'), administracao_configuracao,:class=>"btn btn-success btn-sm" %></td>
        <td><%= link_to link_icone('editar'), edit_administracao_configuracao_path(administracao_configuracao,:class=>"btn btn-warning btn-sm") %></td>
        <td><%= link_to link_icone('apagar'), administracao_configuracao, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>


<%= link_to link_icone('Cadastrar AdministracaoConfiguracao','plus'), new_administracao_configuracao_path, :class=>"btn btn-large btn-success" %>


