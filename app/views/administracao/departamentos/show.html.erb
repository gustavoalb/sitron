<%= titulo_pagina(link_icone("Departamento",'sitemap'), @administracao_departamento.nome)%>

<dl class="dl-horizontal"> 
  <dt>Nome:</dt>
  <dd><%= @administracao_departamento.nome %></dd>
  <dt>Descricao:</dt>
  <dd><%= @administracao_departamento.descricao %></dd>
  <dt>Entidade:</dt>
  <dd><%= detalhes(@administracao_departamento.entidade,:nome) %></dd>
  <dt>Responsavel:</dt>
  <dd><%= detalhes(@administracao_departamento.responsavel,:nome) %></dd>
</dl>

<%= link_to link_icone('editar'), edit_administracao_departamento_path(@administracao_departamento),class: "btn btn-warning btn-sm" %> |
<%= link_to link_icone('voltar'), administracao_departamentos_path, class: "btn btn-sm btn-default" %>