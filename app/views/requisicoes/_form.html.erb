<%content_for :maps do%>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<%=javascript_include_tag("gmaps_autocomplete.js")%>
<%end%>
<div class='row'>
    <%= simple_nested_form_for @requisicao,html: {class: 'form-horizontal'} do |f| %>
    <%= f.error_notification %>
    <%= f.association :motivo,:collection=>Administracao::Motivo.normais.collect {|m|[m.nome,m.id]}, :label=>"Motivo da Requisição",:prompt=>'Selecione o seu motivo para a Requisição',:input_html=>{:id=>"motivo_requisicao"}%>
    <div id="div_carga">
      <%if f.object.motivo and f.object.motivo.carga?%>
      <%= f.input :tipo_carga, :collection=>Administracao::Motivo.tipo_cargas.keys.map {|tp| [tp.titleize,tp]}, :prompt=>"Selecione o tipo de Carga",input_html: {} %>
      <%end%>
      <%if f.object.motivo and f.object.motivo.necessita_descricao%>
      <%= f.input :descricao, :as=>:text,:label=>"Descrição do Caso",:input_html=>{:class=>"mensagem"},:hint=>raw("<span class='contagem_caracteres'></span>")%>
      <%end%>
    </div>

    <%= f.input :tipo_requisicao,input_html: {value: "normal",readonly: true},as: :hidden%>
    <%if Time.zone.now.wday == 6 -%>
    <%= f.input :data_ida,input_html: {readonly: true,value: 2.days.from_now.to_date.to_s_br},as: :string,:label=>"Saída"  %>
    <%elsif Time.zone.now.wday == 7 -%>
    <%= f.input :data_ida,input_html: {readonly: true,value: 1.days.from_now.to_date.to_s_br},as: :string,:label=>"Saída"  %>
    <%else%>
    <%= f.input :data_ida,input_html: {readonly: true,value: Time.zone.now.tomorrow.to_date.to_s_br},as: :string,:label=>"Saída"  %>

    <%end%>

    <%= f.input :hora_ida,input_html: {id: "timepicker",value: "#{(Time.now+1.hour).hour}:00:00"},as: :string,:label=>"Na Hora"  %>
    <%if Time.zone.now.wday == 6 -%>
    <%= f.input :data_volta,input_html: {readonly: true,value: 2.days.from_now.to_date.to_s_br},as: :string,:label=>"Previsão de Retorno"  %>
    <%elsif Time.zone.now.wday == 7 -%>
    <%= f.input :data_volta,input_html: {readonly: true,value: 1.days.from_now.to_date.to_s_br},as: :string,:label=>"Previsão de Retorno"  %>
    <%else%>
    <%= f.input :data_volta,input_html: {readonly: true,value: Time.now.tomorrow.to_date.to_s_br},as: :string,:label=>"Previsão de Retorno" ,as: :hidden   %>
    <%end%>

    <%= f.input :hora_volta,input_html: {id: "timepicker2",value: "#{(Time.now+2.hour).hour}:00:00"},as: :string,:label=>"Previsão da Hora de Retorno"  %>

    <%= f.input :numero_passageiros,:collection=>1..15, :label=>"Número de passageiros",:include_blank=>"Selecione o numero de passageiros",input_html: {id: "npassageiros"}%>

    <%=f.input :pessoa_ids,:collection=>@pessoas.collect{|p|[p.nome.camelcase,p.id]},input_html: {class: "multiselect_pessoa",multiple: "multiple"},:hint=>raw("Selecione os Passageiros ou #{link_cadastro_modal(link_icone('Clique aqui','user'),'#cadastrar_pessoa')} para cadastrar uma pessoa"),:label=>"Passageiros"%>
  <div id='rotas'>
    <%=f.input :rota_ids,:collection=>@rotas.collect{|r|[sigla_destino(r),r.id]},input_html: {class: "multiselect_rota",multiple: "multiple"},:label=>"Rota",:hint=>raw("Selecione uma rota")%>
</div>
    <%= f.fields_for :endereco%>

    <%=raw("#{f.link_to_add link_icone('Você pode usar um destino diferente clicando Aqui','sitron-marker'), :endereco,:class=>'btn btn-xs btn-success'}")%>
  


    <%=botoes_form(f)%>

    <% end %>
</div>





<%=modal_simples("cadastrar_pessoa", "Adicionar um Passageiro" ) do %>

<%= simple_form_for :pessoa,html: {class: "form-horizontal",id: "my_form"},:url=>salvar_pessoa_requisicoes_url(:url_volta=>request.original_url) do |f| %>
<%= f.error_notification %>

<%= f.input :nome %>
<%= f.input :cpf, input_html: {class: "cpf"} %>
<%= f.input :email, as: :email %>
<%= f.input :matricula %>
<%= f.input :entidade_id,input_html: {value: current_user.pessoa.entidade.id},as: :hidden%>
<%= f.input :departamento_id,input_html: {value: current_user.pessoa.departamento.id},as: :hidden    %>
<%= f.input :cargo_id,:collection=>Administracao::Cargo.all.collect {|c|[c.nome,c.id]} %>
<%=botoes_form_modal(f,"Salvar Pessoa")%>

<% end %>
<%end%>




