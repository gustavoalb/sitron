<script type="text/javascript">


  $(function() {
    var fieldsCount,
    
    maxFieldsCount = 0,
    $addLink = $('a.add_nested_fields');

    function toggleAddLink() {
      $addLink.toggle(fieldsCount <= maxFieldsCount)
    }

    $(document).on('nested:fieldAdded', function() {
      fieldsCount += 1;
      toggleAddLink();


       gmaps_init();
       autocomplete_init();
      $('#mapa').removeClass('hide');
      $('#rotas').addClass('hide');
     // autocomplete_init();
      $("#requisicao_rota_ids").multiselect("clearSelection");

   });

    $(document).on('nested:fieldRemoved', function() {
      fieldsCount -= 1;
      toggleAddLink();
      gmaps_init();
       autocomplete_init();
      $('#mapa').addClass('hide');
       $('#rotas').removeClass('hide');
      $('#endereco_real').val('');
      $('#gmaps-input-address').val('');
      $('#requisicao_endereco_attributes_descricao').val();
      $('#gmaps-output-latitude').val();
      $('#gmaps-output-logitude').val();
    });  

  // count existing nested fields after page was loaded
  fieldsCount = $('form .fields').length;
  toggleAddLink();
})

</script>


