<%titulo_pagina(link_icone("Busca no Sistema","search"),"SITRON")%>
<%content_for :dashboard do%>
<%if @query%>
<h3>Exibindo Resultados para '<%=@query%>'</h3>
<%else%>
<h3>Digite algo!</h3>
<%end%>
<hr>
<div class="search-result">

	<h4> <%=@busca_pessoas.count%> <%="Pessoa".pluralize(@busca_pessoas.count)%> <%="Encontrada".pluralize(@busca_pessoas.count)%></h4>
	<%@pe = @pessoas.order('nome').group_by{|o| o.nome[0]} %>


   	<%@pe.each do |letra,pp|%>
   	 <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatables">
    <thead>
       <tr><th><h3><span class='label label-success'><%=letra%></span></h3></th></tr>
     </thead>
    <tbody> 
	
	<%pp.each do |p|%>
	<tr>
	<td><%=p.nome%>&nbsp;<%=link_to "#{administracao_pessoa_url(p.id)}",administracao_pessoa_url(p.id)%></td>
	</tr>
	<%end%>
	</tbody>
	</table>
	<%end%>



</div>
<%end%>


