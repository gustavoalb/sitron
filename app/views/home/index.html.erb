<%titulo_pagina("Sistema Online para Gestão de Transporte - SITRON/SEED","SITRON")%>
<%content_for :dashboard do%>

<%=icone_dash("Usuários Registrados",User.accessible_by(current_ability).all.count,"person","Ver Todos","arrow-circle-right",'green',usuarios_url) if can? :manage, User %>
<%=icone_dash("Postos no Pátio", @postos = Posto.ativo.na_data(Time.zone.now).count,"model-s","Ver Todos","arrow-circle-right",'orange',entrada_patio_index_url) if can? :manage, Posto%>
<%=icone_dash("Postos Disponíveis", @postos = Posto.ativo.na_data(Time.zone.now).disponivel.count,"model-s","Ver Todos","arrow-circle-right",'success') if can? :manage, Posto%>
<%=icone_dash("Requisições de Transporte",Requisicao.accessible_by(current_ability).count,"clipboard","Ver Todos","arrow-circle-right",'primary',requisicoes_path) if can? :manage, Requisicao%>
<%=icone_dash("Rotas",Administracao::Rota.count,"map","Listar Rotas","arrow-circle-right",'sky') if can? :manage, Administracao::Rota%>
<%=icone_dash("Problemas Ocorridos",@problemas.count,"thumbsdown","Mostrar todos os Problemas","arrow-circle-right",'danger') %>

<%end%>


<%content_for :dashboard_user do%>

<div class="box">
	<div class="box-header">
		<h3 class="box-title">Requisição de Serviço de Transporte</h3>
	</div>
	<div class="box-body">
		<%=link_to link_icone_ion("Requisição de Transporte","model-s"),"#",:class=>"btn btn-app btn-success"%>

		<%=link_to link_icone_ion("Status de Requisição","information-circled"),"#",:class=>"btn btn-app btn-success"%>
		<%=link_to link_icone_ion("Efetuar uma Reclamação","bug"),"#",:class=>"btn btn-app btn-success"%>
	</div>
</div>
<%end%>

