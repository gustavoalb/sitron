<%= simple_form_for @mensagem,html: {class: "form-horizontal"} do |f| %>
  <%= f.error_notification %>


    <%= f.input :texto,:input_html=>{:class=>"mensagem"},as: :text	 %>
    <%= f.input :remetente_id,input_html: {value: current_user.id},as: :hidden %>
    <%= f.association :destinatario,:collection=>@destinatarios %>



    <br/><br/><br/>
    <%=botoes_form_alt(f,"Enviar Mensagem")%>

<% end %>

