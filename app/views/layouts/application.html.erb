<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Sistema Online de Gestão de
    Transporte - SITRON" %></title>
    <%= include_gon %>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Sitron" %>">
    <!-- link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600' rel='stylesheet' type='text/css' -->
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>

    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600' rel='stylesheet' type='text/css'>
    <script src="//maps.google.com/maps/api/js?v=3.exp&amp;sensor=false&amp;libraries=geometry&amp;language=pt-BR" type="text/javascript"></script>
    <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>


    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

    <%= csrf_meta_tags %>
</head>
<body>



    <div id="headerbar">
        <div class="container">
            <div class="row">
                <div class="col-xs-6 col-sm-2">
                    <a href="#" class="shortcut-tiles tiles-brown">
                        <div class="tiles-body">
                            <div class="pull-left"><i class="fa fa-pencil"></i></div>
                        </div>
                        <div class="tiles-footer">
                            Create Post
                        </div>
                    </a>
                </div>
                <div class="col-xs-6 col-sm-2">
                    <a href="#" class="shortcut-tiles tiles-grape">
                        <div class="tiles-body">
                            <div class="pull-left"><i class="fa fa-group"></i></div>
                            <div class="pull-right"><span class="badge">2</span></div>
                        </div>
                        <div class="tiles-footer">
                            Contacts
                        </div>
                    </a>
                </div>
                <div class="col-xs-6 col-sm-2">
                    <a href="#" class="shortcut-tiles tiles-primary">
                        <div class="tiles-body">
                            <div class="pull-left"><i class="fa fa-envelope-o"></i></div>
                            <div class="pull-right"><span class="badge">10</span></div>
                        </div>
                        <div class="tiles-footer">
                            Messages
                        </div>
                    </a>
                </div>
                <div class="col-xs-6 col-sm-2">
                    <a href="#" class="shortcut-tiles tiles-inverse">
                        <div class="tiles-body">
                            <div class="pull-left"><i class="fa fa-camera"></i></div>
                            <div class="pull-right"><span class="badge">3</span></div>
                        </div>
                        <div class="tiles-footer">
                            Gallery
                        </div>
                    </a>
                </div>

                <div class="col-xs-6 col-sm-2">
                    <a href="#" class="shortcut-tiles tiles-midnightblue">
                        <div class="tiles-body">
                            <div class="pull-left"><i class="fa fa-cog"></i></div>
                        </div>
                        <div class="tiles-footer">
                            Settings
                        </div>
                    </a>
                </div>
                <div class="col-xs-6 col-sm-2">
                    <a href="#" class="shortcut-tiles tiles-orange">
                        <div class="tiles-body">
                            <div class="pull-left"><i class="fa fa-wrench"></i></div>
                        </div>
                        <div class="tiles-footer">
                            Plugins
                        </div>
                    </a>
                </div>

            </div>
        </div>
    </div>

    <header class="navbar navbar-inverse navbar-fixed-top" role="banner">
        <a id="leftmenu-trigger" class="tooltips" data-toggle="tooltip" data-placement="right" title="Toggle Sidebar"></a>
        <a id="rightmenu-trigger" class="tooltips" data-toggle="tooltip" data-placement="left" title="Toggle Infobar"></a>

        <div class="navbar-header pull-left">
            <a class="navbar-brand" href="index.htm">Sitron</a>
        </div>

        <ul class="nav navbar-nav pull-right toolbar">

         <%=render "shareds/navigation_links"%>

         <%=render "shareds/mensagens"%>
         <%=render "shareds/notificacoes"%>
<li>
    <a href="#" id="headerbardropdown"><span><i class="fa fa-level-down"></i></span></a>
</li>

</ul>
</header>

<div id="page-container">
    <!-- BEGIN SIDEBAR -->
    <nav id="page-leftbar" role="navigation">
        <!-- BEGIN SIDEBAR MENU -->
        <ul class="acc-menu" id="sidebar">
            <li id="search">
                <a href="javascript:;"><i class="fa fa-search opacity-control"></i></a>
                <form>
                    <input type="text" class="search-query" placeholder="Busca...">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </li>



            <li class="divider"></li>
            <%=nav_item(root_url,'Home','root','index','home')%>
            <%=nav_item_menu('Empresas','administracao_empresas','building-o') do%>
            <%=nav_item(administracao_empresas_url,'Listagem de empresas','administracao_empresas','index','building-o')%>
            <%=nav_item(new_administracao_empresa_url,'Cadastrar Empresa','administracao_empresas','new','plus')%>
            <%=yield :menu_empresa%>
            <%end%>


            <%=nav_item_menu('Veículos','administracao_veiculos','car') do%>
            <%=nav_item(administracao_veiculos_url,'Listagem de Veículos','administracao_veiculos','index','car')%>
            <%=nav_item(new_administracao_veiculo_url,'Cadastrar Veículo','administracao_veiculos','new','plus')%>
            <%=yield :menu_veiculo%>
            <%end%>
            <%=nav_item(requisicoes_url,'Requisições de Transporte','requisicoes','index','thumbs-up')%>
            <%=nav_item(calendario_url,'Calendário de Requisições','calendario','index','calendar')%>
            <%=nav_item(entrada_patio_index_url,'Gerenciamento de Pátio','patio','index','car')%>

  

            <li class="divider"></li>
            <li><a href="javascript:;"><i class="fa fa-cog"></i> <span>Configurações</span> <span class="badge badge-default">6</span></a>
              <ul class="acc-menu">
                <%=nav_item(usuarios_url,'Usuarios','usuarios','index','users')%>
                <%=nav_item(administracao_departamentos_url,'Departamentos','administracao_departamentos','index','sitemap')%>
                <%=nav_item(administracao_cargos_url,'Cargos','administracao_cargos','index','suitcase')%>
                <%=nav_item(administracao_pessoas_url,'Pessoas','administracao_pessoas','index','users')%>
                <%=nav_item(administracao_combustiveis_url,'Combustíveis','administracao_combustiveis','index','tint')%>
                <%=nav_item(administracao_modalidades_url,'Modalidades','administracao_modalidades','index','tag')%>
                <%=nav_item(administracao_rotas_url,'Rotas','administracao_rotas','index','compass')%>
                <%=nav_item(administracao_contratos_url,'Contratos','administracao_contratos','index','file-text-o')%>
                <%=nav_item(administracao_motivos_url,'Motivos','administracao_motivos','index','indent')%>
            </ul>
        </li>

    </ul>
    <!-- END SIDEBAR MENU -->
</nav>

<!-- BEGIN RIGHTBAR -->
<div id="page-rightbar">

    <div id="chatarea">
        <div class="chatuser">
            <span class="pull-right">Jane Smith</span>
            <a id="hidechatbtn" class="btn btn-default btn-sm"><i class="fa fa-arrow-left"></i> Back</a>
        </div>
        <div class="chathistory">
            <div class="chatmsg">
                <p>Hey! How's it going?</p>
                <span class="timestamp">1:20:42 PM</span>
            </div>
            <div class="chatmsg sent">
                <p>Not bad... i guess. What about you? Haven't gotten any updates from you in a long time.</p>
                <span class="timestamp">1:20:46 PM</span>
            </div>
            <div class="chatmsg">
                <p>Yeah! I've been a bit busy lately. I'll get back to you soon enough.</p>
                <span class="timestamp">1:20:54 PM</span>
            </div>
            <div class="chatmsg sent">
                <p>Alright, take care then.</p>
                <span class="timestamp">1:21:01 PM</span>
            </div>
        </div>
        <div class="chatinput">
            <textarea name="" rows="2"></textarea>
        </div>
    </div>

    <div id="widgetarea">
        <div class="widget">
            <div class="widget-heading">
                <a href="javascript:;" data-toggle="collapse" data-target="#accsummary"><h4>Suas Requisições de Transporte</h4></a>
            </div>

            <div class="widget-body collapse in" id="accsummary">
                <%current_user.pessoa.requisicoes.each do |req|%>
                <%=direito_menu_req(req)%>
                <%end%>

                <span class="more"><a href="<%=requisicoes_url%>">Ver Todas</a></span>
            </div>
        </div>

        <%if current_user.administrador?%>
        <div class="widget">
            <div class="widget-heading">
                <a href="javascript:;" data-toggle="collapse" data-target="#taskbody"><h4>Requisições <small>(<%=Requisicao.all.count%>)</small></h4></a>
            </div>

            <div class="widget-body collapse in" id="taskbody">

                <%Requisicao.limit(4).each do |req|%>
                <%=direito_menu_req(req)%>
                <%end%>
                <span class="more"><a href="ui-progressbars.htm">Mostrar Todas</a></span>
            </div>
        </div>
        <%end%>





    </div>
</div>
<!-- END RIGHTBAR -->
<div id="page-content">
	<div id='wrap'>
		<div id="page-heading">
			<%= render_breadcrumbs_app %>

			<h1><%=yield :titulo%></h1>
			
		</div>
		<div class="container">



			<div class="row">
				<div class="col-md-12">
                  <%= render 'layouts/messages' %>



                  <%=yield_or :dashboard do%>
                  
                 

                  <div class="panel panel-primary">
                      <div class="panel-heading">
                         <h4><%=yield :sub_titulo%></h4>
                         <div class="options">

                         </div>
                     </div>


                     <div class="panel-body">
                     
                         <%=yield%>
                     </div>
                 </div>
                 <%end%>
             </div>
         </div>







     </div> <!-- container -->
 </div> <!--wrap -->
</div> <!-- page-content -->

<footer role="contentinfo">
    <div class="clearfix">
        <ul class="list-unstyled list-inline">
        <li>Secretaria de Estado da Educação - SITRON&copy; 2014</li>
            <button class="pull-right btn btn-inverse-alt btn-xs hidden-print" id="back-to-top"><i class="fa fa-arrow-up"></i></button>
        </ul>
    </div>
</footer>

</div> <!-- page-container -->


<%= yield :scripts%>
</body>
</html>
