<%# add navigation links to this file %>
<% if user_signed_in? %>
<li class="dropdown user user-menu">
	<a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="glyphicon glyphicon-user"></i> <span><%= current_user.nome%> <i class="caret"></i></span> </a>
	<ul class="dropdown-menu">
		<!-- User image -->
		<li class="user-header bg-light-blue">
			<%= image_tag("padrao/avatar_default.png",:class=>"img-circle")%>
			<p>
				<%= current_user.nome%>
				<small>Membro desde <%= current_user.created_at.to_s_br%></small>
			</p>
		</li>
		<!-- Menu Body -->
		<!-- Menu Footer-->
		<li class="user-footer">
			<div class="pull-left">
				<%= link_to 'Editar Conta', edit_user_registration_path,:class=>"btn btn-flat btn-default" %>
			</div>
			<div class="pull-right">
				<%= link_to 'Sair', destroy_user_session_path, :method=>'delete',:class=>"btn btn-flat btn-default" %>
			</div>
		</li>
	</ul>
</li>

<% else %>
<li>
	<%= link_to 'Sign in', new_user_session_path %>
</li>
<li>
	<%= link_to 'Sign up', new_user_registration_path %>
</li>
<% end %>
<% if user_signed_in? %>
<% if current_user.admin? %>
<li>
	<%= link_to 'Users', users_path %>
</li>
<% end %>
<% end %>

