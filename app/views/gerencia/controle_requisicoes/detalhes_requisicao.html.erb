<%= titulo_pagina("Detalhes da Requisição", @requisicao.requisitante.nome)%>
<% @notificacao.ver if @notificacao.state=="nao_vista" -%>
<dl class="dl-horizontal"> 
  <dt>Numero:</dt>
  <dd><%= @requisicao.numero %></dd>
  <dt>Requisitante:</dt>
  <dd><%= @requisicao.requisitante.nome %></dd>
  <dt>Tipo</dt>
  <dd><%=@requisicao.tipo_requisicao.upcase%></dd>
  <dt>Data:</dt>
  <dd><%= @requisicao.data_ida.to_s_br %></dd>
  <dt>Hora:</dt>
  <dd><%= @requisicao.hora_ida.in_time_zone("Brasilia").strftime("%H:%M:%S") %></dd>
  <dt>Status:</dt>
  <dd><%= @requisicao.state.upcase %></dd>


</dl>

<%=link_to link_icone("Definir Posto","car"), "#p_#{@requisicao.id}", :'data-toggle' => "modal",:class=>"btn btn-xs btn-green"  %> |
<%=link_to link_icone("Cancelar","recycle"), gerencia_controle_requisicoes_cancelar_requisicao_url(:requisicao=>@requisicao.id), data: { confirm: 'Você tem Certeza que deseja Cancelar esta requisicao?' },:class=>"btn btn-xs btn-brown",:method=>:post  if (@requisicao.state!="finalizada" or @requisicao.state!="cancelada") or (@requisicao.posto and @requisicao.posto.em_transito?) %> |
<%= link_to link_icone('voltar'), mensagens_path, class: "btn btn-sm btn-default" %> |


  <%=modal("p_#{@requisicao.id}", "Definir o Posto para a Requisição #{@requisicao.id}",@requisicao) do %>
  <%= simple_form_for :requisicao,:html=>{:class=>"form-horizontal"},:url=>gerencia_controle_requisicoes_definir_posto_url do |f| %>
  <%=f.input :id,:input_html=>{:value=>@requisicao.id},as: :hidden%>
  <%=f.input :posto,:collection=>@postos.collect {|p|["#{p.lote.nome} - #{p.lote.tipo}",p.id]}%>
  <br/> 
  <%=botoes_form_modal(f,"Definir Posto")%>

  <%end%>
  <%end%>