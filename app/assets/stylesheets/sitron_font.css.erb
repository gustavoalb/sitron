/*
  Icon Font: sitron_font
*/

@font-face {
    font-family: "sitron_font";
    src: url(<%=asset_path("sitron_font.eot")%>);
    src: url(<%=asset_path("sitron_font.eot?#iefix")%>) format("embedded-opentype"),
url(<%=asset_path("sitron_font.woff")%>) format("woff"),
url(<%=asset_path("sitron_font.ttf")%>) format("truetype"),
url(<%=asset_path("sitron_font.svg#sitron_font")%>) format("svg");
    font-weight: normal;
    font-style: normal;
}

@media screen and (-webkit-min-device-pixel-ratio:0) {
    @font-face {
        font-family: "sitron_font";
        src: url(<%=asset_path("sitron_font.svg#sitron_font")%>) format("svg");
    }
}

[data-icon]:before { content: attr(data-icon); }

[data-icon]:before,
.fa-aguardando:before,
.fa-caminhao:before,
.fa-kombi:before,
.fa-motocicleta:before,
.fa-onibus:before,
.fa-passeio:before,
.fa-pickup:before,
.fa-requisicao:before,
.fa-sitron-marker:before,
.fa-sitron_marker:before,
.fa-van:before {
  display: inline-block;
  font-family: "sitron_font";
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  line-height: 1;
  text-decoration: inherit;
  text-rendering: optimizeLegibility;
  text-transform: none;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  font-smoothing: antialiased;
}

.fa-aguardando:before { content: "\f100"; }
.fa-caminhao:before { content: "\f101"; }
.fa-kombi:before { content: "\f102"; }
.fa-motocicleta:before { content: "\f103"; }
.fa-onibus:before { content: "\f104"; }
.fa-passeio:before { content: "\f105"; }
.fa-pickup:before { content: "\f106"; }
.fa-requisicao:before { content: "\f107"; }
.fa-sitron-marker:before { content: "\f108"; }
.fa-sitron_marker:before { content: "\f109"; }
.fa-van:before { content: "\f10a"; }
